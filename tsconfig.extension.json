{
    "compilerOptions": {
        "module": "Node16",
        "tsBuildInfoFile": "node_modules/.cache/tsc/tsbuildinfo",
        "target": "ES2022",
        "lib": ["ES2022"],
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "out",
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "composite": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "src/webview/**/*.ts",
        "src/test/**/*.ts"
    ]
}

