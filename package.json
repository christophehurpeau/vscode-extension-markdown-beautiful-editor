{
  "name": "markdown-beautiful-editor",
  "displayName": "Markdown Beautiful Editor",
  "description": "A beautiful WYSIWYG-style markdown editor with visual syntax styling, GitHub alerts, and table of contents",
  "version": "0.1.2",
  "publisher": "chrp",
  "author": {
    "name": "Christophe Hurpeau"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/christophehurpeau/vscode-extension-markdown-beautiful-editor"
  },
  "bugs": {
    "url": "https://github.com/christophehurpeau/vscode-extension-markdown-beautiful-editor/issues"
  },
  "homepage": "https://github.com/christophehurpeau/vscode-extension-markdown-beautiful-editor#readme",
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "markdown",
    "wysiwyg",
    "editor",
    "preview",
    "github",
    "alerts",
    "toc"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [],
  "contributes": {
    "customEditors": [
      {
        "viewType": "markdown.beautifulEditor",
        "displayName": "Markdown Beautiful Editor",
        "selector": [
          {
            "filenamePattern": "*.md"
          }
        ],
        "priority": "default"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run check-types && yarn run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc -b --watch",
    "package": "yarn run check-types && yarn run lint && node esbuild.js --production",
    "compile-tests": "tsc -p tsconfig.test.json",
    "watch-tests": "tsc -p tsconfig.test.json -w",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "check-types": "tsc -b",
    "lint": "eslint src",
    "test": "yarn test:unit && yarn test:integration",
    "test:unit": "mocha out/test/unit/**/*.test.js",
    "test:integration": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.1",
    "eslint": "^9.39.1",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "vsce": "2.15.0",
    "typescript-eslint": "^8.48.1"
  }
}
